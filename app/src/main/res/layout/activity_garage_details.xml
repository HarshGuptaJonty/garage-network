<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/settingBGLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GarageDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            style="@style/settingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/amiko"
            android:text="Garage Details"
            android:textSize="24sp"
            android:textStyle="bold" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="400dp">

            <ImageView
                android:id="@+id/galleryImages"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/auth_dark"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/previousImage"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="#72959595"
                android:onClick="previous"
                android:paddingStart="10dp"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/black"
                tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/nextImage"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="#72959595"
                android:onClick="next"
                android:paddingStart="10dp"
                android:src="@drawable/ic_baseline_arrow_next_ios_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/black"
                tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                style="@style/settingText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/allerta"
                android:gravity="center_vertical"
                android:text="Owner name:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ownerName"
                style="@style/settingText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/allerta"
                android:gravity="center_vertical"
                android:text="Harsh Gupta"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                style="@style/settingText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/allerta"
                android:gravity="center_vertical"
                android:text="Country:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/country"
                style="@style/settingText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/allerta"
                android:gravity="center_vertical"
                android:text="India"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                style="@style/settingText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/allerta"
                android:gravity="center_vertical"
                android:text="State:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/state"
                style="@style/settingText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/allerta"
                android:gravity="center_vertical"
                android:text="West Bengal"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                style="@style/settingText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/allerta"
                android:gravity="center_vertical"
                android:text="Address:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/address"
                style="@style/settingText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/allerta"
                android:gravity="center_vertical"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                style="@style/settingText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/allerta"
                android:gravity="center_vertical"
                android:text="District:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/district"
                style="@style/settingText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/allerta"
                android:gravity="center_vertical"
                android:text="Howrah"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                style="@style/settingText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/allerta"
                android:gravity="center_vertical"
                android:text="PinCode:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pincode"
                style="@style/settingText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/allerta"
                android:gravity="center_vertical"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                style="@style/settingText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/allerta"
                android:gravity="center_vertical"
                android:text="Price:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/price"
                style="@style/settingText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/allerta"
                android:gravity="center_vertical"
                android:text="35,00,000"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                style="@style/settingText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/allerta"
                android:gravity="center_vertical"
                android:text="Size:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/size"
                style="@style/settingText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/allerta"
                android:gravity="center_vertical"
                android:text="40 x 40 fts"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                style="@style/settingText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/allerta"
                android:gravity="center_vertical"
                android:text="Phone 1:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/phone1"
                style="@style/settingText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/allerta"
                android:gravity="center_vertical"
                android:text="0123456789"
                android:textSize="16sp" />

            <Button
                android:id="@+id/call1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:backgroundTint="#4CAF50"
                android:drawableLeft="@drawable/ic_baseline_local_phone_24"
                android:drawableTint="@color/black"
                android:onClick="call"
                android:tag="1"
                android:text="Call"
                android:textAllCaps="false"
                android:textColor="@color/black"
                app:cornerRadius="10dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/phoneLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                style="@style/settingText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/allerta"
                android:gravity="center_vertical"
                android:text="Phone 2:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/phone2"
                style="@style/settingText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/allerta"
                android:gravity="center_vertical"
                android:text="0123456789"
                android:textSize="16sp" />

            <Button
                android:id="@+id/call2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:backgroundTint="#4CAF50"
                android:drawableLeft="@drawable/ic_baseline_local_phone_24"
                android:drawableTint="@color/black"
                android:onClick="call"
                android:tag="2"
                android:text="Call"
                android:textAllCaps="false"
                android:textColor="@color/black"
                app:cornerRadius="10dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/phoneLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                style="@style/settingText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/allerta"
                android:gravity="center_vertical"
                android:text="Phone 3:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/phone3"
                style="@style/settingText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/allerta"
                android:gravity="center_vertical"
                android:text="0123456789"
                android:textSize="16sp" />

            <Button
                android:id="@+id/call3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:backgroundTint="#4CAF50"
                android:drawableLeft="@drawable/ic_baseline_local_phone_24"
                android:drawableTint="@color/black"
                android:onClick="call"
                android:tag="3"
                android:text="Call"
                android:textAllCaps="false"
                android:textColor="@color/black"
                app:cornerRadius="10dp" />

        </LinearLayout>

        <Button
            android:id="@+id/deleteGarage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:backgroundTint="@android:color/holo_red_light"
            android:drawableLeft="@drawable/ic_baseline_remove_circle_outline_24"
            android:drawableRight="@drawable/ic_baseline_remove_circle_outline_24"
            android:onClick="deleteGarage"
            android:text="Delete this garage details"
            android:textColor="@color/black"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>